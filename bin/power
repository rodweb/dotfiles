#!/usr/bin/env bash

chosen=$(echo -e '[cancel]\nshutdown\nsuspend\nhibernate\nreboot\nlogout\nlock' | dmenu -p "system")

case "$chosen" in
  shutdown)
    systemctl poweroff;;
  suspend)
    systemctl suspend;;
  reboot)
    systemctl reboot;;
  hibernate)
    systemctl hibernate;;
  logout) xkill xinit;;
  lock) slock;;
esac

echo "$1"
